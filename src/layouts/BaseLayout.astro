---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'my-site',
  description = 'Astro 4 каркас: быстрый лендинг + Supabase-ready база.'
} = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="ru">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <slot name="head" />
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style is:global>
  :root {
    font-family: 'Space Grotesk', 'Inter', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI',
      sans-serif;
    color: #f8f9ff;
    background-color: #03040b;
    --color-bg: #03040b;
    --color-surface: #0b0f1f;
    --color-surface-strong: #131830;
    --color-accent: #7f5cff;
    --color-accent-alt: #20e3b2;
    --color-muted: rgba(248, 248, 255, 0.65);
  }

  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }

  body {
    min-height: 100vh;
    margin: 0;
    background: radial-gradient(circle at 20% 0%, rgba(127, 92, 255, 0.25), transparent 45%),
      radial-gradient(circle at 80% 0%, rgba(32, 227, 178, 0.2), transparent 55%), var(--color-bg);
    color: #f8f9ff;
  }

  main {
    margin: 0 auto;
    width: min(1200px, calc(100% - 3rem));
    padding: 5rem 0 3rem;
    display: flex;
    flex-direction: column;
    gap: 4rem;
  }

  a {
    text-decoration: none;
    color: inherit;
  }

  section {
    width: 100%;
  }

  .section-heading {
    text-align: center;
    max-width: 680px;
    margin: 0 auto;
  }

  .section-heading h2 {
    font-size: clamp(2rem, 3vw, 3.2rem);
    margin: 0;
  }

  .section-heading .eyebrow {
    text-transform: uppercase;
    letter-spacing: 0.3em;
    font-size: 0.75rem;
    color: rgba(255, 255, 255, 0.6);
    margin-bottom: 1rem;
  }

  .muted {
    color: var(--color-muted);
  }

  @media (max-width: 720px) {
    main {
      width: calc(100% - 2rem);
      padding-top: 4rem;
    }
  }
</style>
