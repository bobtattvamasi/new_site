---
import BaseLayout from '../layouts/BaseLayout.astro';

const highlights = [
  {
    title: 'Чистая архитектура',
    body: 'Astro + TypeScript, никакого бандла React до тех пор, пока он реально не нужен.'
  },
  {
    title: 'Готовность к Supabase',
    body: 'Вынесенные env-переменные + строгие типы для будущих серверных хендлеров.'
  },
  {
    title: 'Молниеносный билд',
    body: 'PNPM + Astro 4 = dev-сервер поднимается за секунды, деплой на Vercel без плясок.'
  }
];

const checklist = [
  'Базовый layout с Header/Footer компонентами',
  'Резиновые секции под услуги, процесс и CTA',
  '0 лишних демо-страниц — только index.astro'
];
---

<BaseLayout title="my-site — быстрый старт на Astro" description="Минимальный Astro 4 каркас с layout, секциями и готовым Supabase .env.">
  <section class="hero">
    <p class="eyebrow">Astro · TypeScript · Supabase</p>
    <h1>
      Каркас под ваш будущий лендинг: быстро, без мусора и готово к масштабированию.
    </h1>
    <p class="lead">
      Собран минимальный стек: dev-сервер на pnpm, компоненты вынесены, структура повторяет
      будущую продовую кодовую базу.
    </p>
    <div class="actions">
      <a class="primary" href="#contact">Запустить проект</a>
      <a class="secondary" href="#process">Смотреть процесс</a>
    </div>
  </section>

  <section id="services" class="grid">
    {highlights.map((item) => (
      <article>
        <p class="label">{item.title}</p>
        <p>{item.body}</p>
      </article>
    ))}
  </section>

  <section id="process" class="split">
    <div>
      <p class="eyebrow">Как дальше работаем</p>
      <h2>Сначала observable скелет, потом подключаем Supabase и UI.</h2>
      <p class="muted">
        Этот репозиторий — стартовая площадка: разворачиваете pnpm dev, правите секции и подключаете
        нужные интеграции по чек-листу ниже.
      </p>
    </div>
    <ul>
      {checklist.map((item) => (
        <li>{item}</li>
      ))}
    </ul>
  </section>
</BaseLayout>

<style>
  .hero {
    text-align: center;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .eyebrow {
    text-transform: uppercase;
    letter-spacing: 0.2em;
    font-size: 0.75rem;
    color: rgba(255, 255, 255, 0.65);
  }

  h1 {
    font-size: clamp(2.4rem, 4vw, 3.7rem);
    line-height: 1.1;
    margin: 0;
  }

  .lead {
    font-size: 1.1rem;
    color: rgba(255, 255, 255, 0.8);
    max-width: 720px;
    margin: 0 auto;
  }

  .actions {
    display: flex;
    justify-content: center;
    gap: 1rem;
    flex-wrap: wrap;
    margin-top: 0.5rem;
  }

  .primary,
  .secondary {
    padding: 0.85rem 1.5rem;
    border-radius: 999px;
    font-weight: 600;
    letter-spacing: 0.04em;
  }

  .primary {
    background: linear-gradient(135deg, #4f46e5, #06b6d4);
    box-shadow: 0 10px 40px rgba(15, 15, 40, 0.45);
  }

  .secondary {
    border: 1px solid rgba(255, 255, 255, 0.3);
    color: rgba(255, 255, 255, 0.85);
  }

  .grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 1.5rem;
  }

  article {
    padding: 1.5rem;
    border-radius: 1.25rem;
    border: 1px solid rgba(255, 255, 255, 0.08);
    background: rgba(255, 255, 255, 0.02);
    box-shadow: 0 20px 50px rgba(5, 6, 12, 0.4);
  }

  .label {
    font-weight: 600;
    margin-bottom: 0.35rem;
  }

  .split {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    align-items: start;
    padding: 2rem;
    border-radius: 1.25rem;
    border: 1px solid rgba(255, 255, 255, 0.08);
    background: rgba(9, 9, 20, 0.65);
  }

  .muted {
    color: rgba(255, 255, 255, 0.7);
  }

  ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  li {
    padding-left: 1.5rem;
    position: relative;
    color: rgba(255, 255, 255, 0.85);
  }

  li::before {
    content: '•';
    position: absolute;
    left: 0;
    color: #38bdf8;
  }
</style>
