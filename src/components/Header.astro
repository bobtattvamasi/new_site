---
const links = [
  { href: '#benefits', label: 'Почему мы' },
  { href: '#capabilities', label: 'Инструменты' },
  { href: '#cases', label: 'Кейсы' },
  { href: '#pricing', label: 'Форматы' },
  { href: '#faq', label: 'FAQ' }
];
---

<header class="site-header">
  <div class="container">
    <a class="logo" href="/">my-site</a>
    <nav>
      {links.map((link) => (
        <a href={link.href}>{link.label}</a>
      ))}
    </nav>
    <a class="cta" href="#contact">Связаться</a>
  </div>
</header>

<style>
  :global(.site-header) {
    position: sticky;
    top: 0;
    z-index: 5;
    background: rgba(4, 6, 12, 0.8);
    backdrop-filter: blur(18px);
    border-bottom: 1px solid rgba(255, 255, 255, 0.08);
  }

  .container {
    margin: 0 auto;
    max-width: 1200px;
    padding: 1rem 1.5rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
  }

  .logo {
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.16em;
    color: #f8f8ff;
  }

  nav {
    display: flex;
    gap: 1.25rem;
    font-size: 0.92rem;
  }

  nav a {
    color: rgba(255, 255, 255, 0.7);
    transition: color 0.15s ease;
  }

  nav a:hover {
    color: #fff;
  }

  .cta {
    padding: 0.6rem 1.2rem;
    border-radius: 999px;
    border: 1px solid rgba(255, 255, 255, 0.25);
    color: #fff;
    font-size: 0.85rem;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    transition: background 0.2s ease, color 0.2s ease;
  }

  .cta:hover {
    background: #fff;
    color: #080812;
  }

  @media (max-width: 720px) {
    nav {
      display: none;
    }
  }
</style>
