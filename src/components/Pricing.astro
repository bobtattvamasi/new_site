---
interface Plan {
  name: string;
  description: string;
  price: string;
  badge?: string;
  perks: string[];
  cta: string;
}

interface Props {
  title: string;
  subtitle: string;
  plans: Plan[];
}

const { title, subtitle, plans } = Astro.props;
---

<section class="pricing" id="pricing">
  <div class="section-heading">
    <p class="eyebrow">{subtitle}</p>
    <h2>{title}</h2>
  </div>
  <div class="pricing__grid">
    {plans.map((plan) => (
      <article class={`plan-card ${plan.badge ? 'plan-card--highlight' : ''}`}>
        {plan.badge && <span class="plan-card__badge">{plan.badge}</span>}
        <div>
          <h3>{plan.name}</h3>
          <p>{plan.description}</p>
        </div>
        <p class="plan-card__price">{plan.price}</p>
        <ul>
          {plan.perks.map((perk) => (
            <li>{perk}</li>
          ))}
        </ul>
        <a class="plan-card__cta" href="#contact">{plan.cta}</a>
      </article>
    ))}
  </div>
</section>

<style>
  .pricing {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .pricing__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    gap: 1.5rem;
  }

  .plan-card {
    padding: 1.75rem;
    border-radius: 1.5rem;
    border: 1px solid rgba(255, 255, 255, 0.08);
    background: rgba(8, 10, 22, 0.85);
    display: flex;
    flex-direction: column;
    gap: 1rem;
    position: relative;
    overflow: hidden;
  }

  .plan-card--highlight {
    background: linear-gradient(150deg, rgba(9, 12, 35, 0.9), rgba(32, 227, 178, 0.12));
    border-color: rgba(32, 227, 178, 0.3);
  }

  .plan-card__badge {
    align-self: flex-start;
    padding: 0.25rem 0.85rem;
    border-radius: 999px;
    background: rgba(32, 227, 178, 0.15);
    color: #20e3b2;
    font-size: 0.75rem;
    letter-spacing: 0.1em;
  }

  .plan-card__price {
    font-size: 1.8rem;
    font-weight: 600;
  }

  ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.4rem;
  }

  li {
    padding-left: 1.25rem;
    position: relative;
    color: rgba(255, 255, 255, 0.75);
  }

  li::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0.55rem;
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: linear-gradient(120deg, #7f5cff, #20e3b2);
  }

  .plan-card__cta {
    display: inline-flex;
    justify-content: center;
    padding: 0.75rem 1.25rem;
    border-radius: 999px;
    border: 1px solid rgba(255, 255, 255, 0.3);
    text-transform: uppercase;
    letter-spacing: 0.2em;
    font-size: 0.75rem;
  }
</style>
