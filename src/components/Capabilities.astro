---
interface Capability {
  title: string;
  description: string;
  badge: string;
}

interface Props {
  title: string;
  subtitle: string;
  items: Capability[];
}

const { title, subtitle, items } = Astro.props;
---

<section class="capabilities" id="process">
  <div class="capabilities__text">
    <p class="eyebrow">{subtitle}</p>
    <h2>{title}</h2>
    <p class="muted">
      Никаких «потом разберёмся». Показываем каждый шаг, фиксируем договорённости и не пропадаем
      после релиза.
    </p>
  </div>
  <div class="capabilities__grid">
    {items.map((item) => (
      <article class="capability-card">
        <span>{item.badge}</span>
        <h3>{item.title}</h3>
        <p>{item.description}</p>
      </article>
    ))}
  </div>
</section>

<style>
  .capabilities {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    align-items: center;
  }

  .capabilities__text {
    max-width: 520px;
  }

  .capabilities__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 1.25rem;
  }

  .capability-card {
    padding: 1.5rem;
    border-radius: 1.25rem;
    border: 1px solid rgba(255, 255, 255, 0.08);
    background: rgba(12, 17, 34, 0.85);
    min-height: 200px;
    display: flex;
    flex-direction: column;
    gap: 0.4rem;
  }

  .capability-card span {
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: rgba(255, 255, 255, 0.6);
  }

  .capability-card h3 {
    margin: 0;
    font-size: 1.2rem;
  }

  .capability-card p {
    margin: 0;
    color: rgba(255, 255, 255, 0.75);
  }
</style>
